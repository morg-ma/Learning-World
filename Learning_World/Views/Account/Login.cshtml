@model Learning_World.ViewModels.LoginViewModel
@* requre viewmodel has
username
password
check for remember *@
<h1 class="text-center mb-4">Log In to Your Account</h1>
<hr class="mb-5" />
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0 p-4">
            <div class="card-body">
                <form asp-action="Login" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your username or email" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check mb-4">
                        <input class="form-check-input" asp-for="Remember" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">
                            @Html.DisplayNameFor(model => model.Remember)
                        </label>
                    </div>
                    <div class="d-grid gap-2">
                        <input type="submit" value="Login" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-4">
            <p>Don't have an account? <a asp-action="Registration" class="link-primary">Sign up</a></p>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}