<!-- Courses Start -->
<div id="coursesSection" class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">Our Featured Courses</h1>
        </div>
        <div class="row g-4 justify-content-center">
            @* @foreach (var course in Model) *@
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp mt-3" data-wow-delay="0.@(i)s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img src="~/assets/Images/Courses/@Model[i].Image" width="500" height="300" style="object-fit: cover; max-width: 100%;" alt="Full-Stack Web Development">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a asp-controller="CourseDetails" asp-action="ShowCourse" asp-route-courseId="@Model[i].CourseId" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 30px;">Go to Course</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h3 class="mb-0">$@Model[i].Price</h3>
                            <div class="mb-3">
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small>(@Model[i].AverageRating)</small>
                            </div>
                            <h5 class="mb-4">@Model[i].Title</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>Instructor</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fas fa-chart-line text-primary"></i>  @Model[i].DifficultyLevel</small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@Model[i].MaxEnrollment Students</small>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4 wow fadeInUp">
            <a class="btn btn-primary" style="border-radius: 30px;" asp-action="CoursesOverview" asp-controller="Courses">Browse all Courses</a>
        </div>
    </div>
</div>
