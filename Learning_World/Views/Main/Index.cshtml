@model List<Course>
@{
    ViewData["Title"] = "Home Page";
}
<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/images/img/carousel-1.jpg" alt="Students collaborating online">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-light text-uppercase mb-3 animated slideInDown">Innovative Online Courses</h5>
                            <h1 class="display-3 text-white animated slideInDown">Unlock Your Potential with Learning World</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Discover a world of knowledge at your fingertips. Our cutting-edge platform offers interactive courses, expert instructors, and a supportive community to help you achieve your learning goals.</p>
                            <a asp-action="CoursesOverview" asp-controller="Courses" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Explore Courses</a>
                            @if(User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Index" asp-controller="MyLearning" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Start Learning</a>
                            }
                            else {
                                <a asp-action="Login" asp-controller="Account" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Start Learning</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/images/img/carousel-2.jpg" alt="Student learning from home">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-light text-uppercase mb-3 animated slideInDown">Flexible Learning Solutions</h5>
                            <h1 class="display-3 text-white animated slideInDown">Transform Your Skills from Anywhere</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Whether you're a busy professional or a curious learner, our platform adapts to your schedule. Access high-quality education anytime, anywhere, and take control of your learning journey.</p>
                        </div>
                    </div>
                </div>
            </div>
