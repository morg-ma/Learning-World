@model Learning_World.ViewModels.UserProfileViewModel

<div class="container p-5">
    <h1 class="text-center mb-5">User Profile</h1>
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">Profile Image</div>
                <div class="card-body text-center">
                    <div style="width: 230px; height: 230px; margin: 0 auto;">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Url.Content("~/images/" + Model.Image)" alt="Profile Image" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default.jpg" alt="Default Image" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                    </div>
                    <h5 class="card-title mt-3">@Model.Name</h5>
                    <ul class="list-group list-group-flush mt-3 mb-3">
                        <li class="list-group-item"><i class="bi bi-envelope me-2"></i>@Model.Email</li>
                    </ul>
                    <a asp-controller="Profile" asp-action="Edit" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-edit me-2"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-6">
            <!-- User Info -->
            <section>
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h3 class="fw-bold">@Model.Name</h3>
                        <p class="text-muted">@Model.Email</p>
                        @* <p><small class="text-secondary">Member since @Model.RegistrationDate.ToShortDateString()</small></p> *@
                    </div>
                </div>
            </section>
            <!-- User Roles -->
         @*     <section>
                 <div class="card shadow-sm mb-4">
                     <div class="card-body">
                         <h4 class="mb-3"><i class="fas fa-user-tag me-2"></i>User Roles</h4>
                         @if (Model.Roles.Any())
                         {
                             <ul class="list-unstyled">
                                 @foreach (var role in Model.Roles)
                                 {
                                     <li><i class="fas fa-check-circle text-primary me-2"></i>@role</li>
                                 }
                             </ul>
                         }
                         else
                         {
                             <p class="text-muted">No roles assigned</p>
                         }
                     </div>
                 </div>
             </section> *@
            <!-- Certificates Section -->
            
            <section class="mb-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3"><i class="fas fa-certificate me-2 text-warning"></i>Certificates Earned</h4>
                    @if (Model.Certificates.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var cert in Model.Certificates)
                            {
                                <li class="list-group-item">
                                    <strong>@cert.CourseName</strong>
                                    <p class="mb-1">Issued: @cert.IssueDate.ToShortDateString()</p>
                                </li>
                            }
                        </ul>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<partial name="_FooterPartial" />
