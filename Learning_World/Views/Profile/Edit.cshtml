@model UserProfileViewModel
<div class="container mt-5">
    <h2 class="mb-4">Update Details</h2>
    <div class="row">
        <!-- Left Section: Profile Image -->
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">Profile Image</div>
                <div class="card-body text-center">
                    <div style="width: 230px; height: 230px; margin: 0 auto;">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Url.Content("~/images/" + Model.Image)" alt="Profile Image" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default.jpg" alt="Default Image" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                    </div>
                    <h5 class="card-title mt-3">@Model.Name</h5>
                    <ul class="list-group list-group-flush mt-3 mb-3">
                        <li class="list-group-item"><i class="bi bi-envelope me-2"></i>@Model.Email</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Right Section: Additional Info -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Additional Information</div>
                <div class="card-body">
                    <form asp-action="SaveEdit" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" id="name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input asp-for="Email" class="form-control" id="email" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <input asp-for="Image" class="form-control" id="imagePath" readonly hidden />
                        <div class="mb-3">
                            <label for="image" class="form-label">Upload Profile Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" id="image" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" asp-action="SaveEdit" >Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-end m-5">
        <a asp-controller="Profile" asp-action="Show" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-edit me-2"></i> Back
        </a>
    </div>
</div>
<partial name="_FooterPartial" />
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

